<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorMainText</item>
    </style>

    <style name="TextTheme">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:fontFamily">@font/magic_school_one</item>
        <item name="android:textColor">@color/colorMainText</item>
    </style>

    <style name="WinnerTheme" parent="TextTheme">
        <item name="android:textSize">35sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="UpperTextTheme" parent="TextTheme">
        <item name="android:layout_marginLeft">@dimen/text_margin_vertical</item>
        <item name="android:layout_marginRight">@dimen/text_margin_vertical</item>
    </style>

    <style name="ToLeftPointerTheme" parent="UpperTextTheme">
        <item name="android:layout_marginLeft">@dimen/to_left_pointer_margin_left</item>
    </style>

    <style name="ScoreTheme">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:fontFamily">@font/kingthings_willow</item>
        <item name="android:textColor">@color/colorInteractiveText</item>
        <item name="android:layout_marginLeft">@dimen/score_margin_vertical</item>
        <item name="android:layout_marginRight">@dimen/score_margin_vertical</item>
    </style>

    <style name="FoulsTheme" parent="ScoreTheme">
        <item name="android:textColor">@color/colorFouls</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:background">@drawable/button</item>
        <item name="android:fontFamily">@font/magic_school_one</item>
        <item name="android:textColor">@color/colorInteractiveText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="AlertDialogTheme"   parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorDialogBackground</item>
        <item name="android:fontFamily">@font/kingthings_willow</item>
    </style>


</resources>
